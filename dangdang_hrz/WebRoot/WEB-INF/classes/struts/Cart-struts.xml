<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN" "struts-2.1.7.dtd" >
<struts>
	<package name="cart" extends="struts-default" namespace="/cart">
		<!-- 添加商品进入购物车 -->
		<action name="addCart" class="com.baizhi.hrz.action.CartAction" method="addcart">
			<result name="addok">/front/cart/cart_list.jsp</result>
		</action>
		
		<!-- update -->
		<action name="update" class="com.baizhi.hrz.action.CartAction" method="update">
			<result name="update">/front/cart/cart_list.jsp</result>
		</action>
		
		<!-- 删除购物车中的商品 -->
		<action name="delete" class="com.baizhi.hrz.action.CartAction" method="delete">
			<result name="delete">/front/cart/cart_list.jsp</result>
		</action>
		
		
		
		
		
	</package>
</struts>





















